#include <stdio.h>

void main(){
    int n1; int n2; int i;
    printf("Digite n1: ");
    scanf("%d", &n1);
    printf("Digite n2: ");
    scanf("%d", &n2);
    if (n2 > n1){
        for (i = (n2-1); i > n1; i--){
            if (i%2 == 0){
                printf("%d\n", i);
            }
        }
    } else if (n1 > n2){
        for (i = (n1-1); i > n2; i--){
            if (i%2 == 0){
                printf("%d\n", i);
            }
        }
    } 
              
}
